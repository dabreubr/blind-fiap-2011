<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Linha" android:id="@+id/linha"></TextView>
	<EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/txtLinha">
		<requestFocus></requestFocus>
	</EditText>
	<TextView android:layout_width="wrap_content" android:id="@+id/onibus" android:layout_height="wrap_content" android:text="@string/Onibus"></TextView>
	<EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/txtOnibus"></EditText>
	<Button android:layout_height="wrap_content" android:id="@+id/btnIniciar" android:text="@string/Iniciar" android:layout_width="match_parent"></Button>
	<TextView android:id="@+id/resultado" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/Resultado"/>
</LinearLayout>
